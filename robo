# range it is use to student marke list
# for no in range(5):
# for no in range (2 ,4):
for no in range(10 , 50 , 5):
    print(no)
    # use in else
for me in range(10):
    print(me)
else:
     print("all the no are finished")
    # nesting of for
for gu in range(10):
    print(gu)
    for ge in range(1):
        print(ge)
else:
     print("all the no are finished")

        # while loops
j = 4
while j < 10:
    print(j)
    j += 1
else:
     print("over")         # while use in else

