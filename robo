  # simple calulation

def add( a, b):
    return ( a + b)

def sub(a , b):
    return (a - b)

def mul(a , b):
    return (a * b)

def div(a , b):
    return (a / b)

print("""
   select operation
1. add
2. sub
3. div
4. mult
""")

choise = int(input("enter your choice"))
a = int(input("enter your no 1"))
b = int(input("entr your no 2"))
if choise == 1:
    print(add(a , b))
elif choise == 2:
    print(sub(a , b))
elif choise == 3:
    print(div(a , b))
elif choise == 4 :
    print(mul(a , b))
else:
    print("enter the correct choise")


